# Gergy MCP Configuration Example
# Copy this file to .env and customize for your environment

# Database Configuration
DATABASE_URL=postgresql://gergy_user:gergy_password@localhost:5432/gergy_knowledge
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=30
REDIS_HEALTH_CHECK_INTERVAL=30

# Server Budget Limits (USD per day)
FINANCIAL_BUDGET_LIMIT=15.0
FAMILY_BUDGET_LIMIT=10.0
LIFESTYLE_BUDGET_LIMIT=8.0
PROFESSIONAL_BUDGET_LIMIT=12.0
HOME_BUDGET_LIMIT=8.0

# Server Enable/Disable
FINANCIAL_ENABLED=true
FAMILY_ENABLED=true
LIFESTYLE_ENABLED=true
PROFESSIONAL_ENABLED=true
HOME_ENABLED=true

# Debug Mode
FINANCIAL_DEBUG=false
FAMILY_DEBUG=false
LIFESTYLE_DEBUG=false
PROFESSIONAL_DEBUG=false
HOME_DEBUG=false

# General Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# External API Keys (when needed)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here
# GOOGLE_API_KEY=your_google_key_here

# Monitoring (Optional)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false